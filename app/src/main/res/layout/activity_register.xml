<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:backgroundTint="@color/background">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/reg_img1"
        />
    
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:id="@+id/reg_back"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_img1"
        android:text="Silahkan Melakukan Registrasi"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/reg_txt1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_txt1"
        android:text="Letâ€™s help you meet up your tasks. "
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/reg_txt2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/reg_txt2"
        android:padding="30dp"
        android:id="@+id/ly1">


        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Masukkan Nama lengkap"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/white"
            android:paddingLeft="10dp"
            android:id="@+id/edt_fullname"
            android:fontFamily="@font/poppinsregular"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan Email"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/white"
            android:paddingLeft="10dp"
            android:id="@+id/edt_email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsregular"
            android:hint="Buat Password"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/white"
            android:paddingLeft="10dp"
            android:id="@+id/edt_pass"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsregular"
            android:hint="Konfirmasi Password"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/white"
            android:paddingLeft="10dp"
            android:id="@+id/edt_pass2"
            />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly1"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold"
        android:background="@drawable/btn_shape"
        android:width="300dp"
        android:id="@+id/reg_btn1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/reg_btn1"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Sudah Mempunyai akun? "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_btn1"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/secondaryColor"
            android:text="Login "
            android:id="@+id/reg_txtlog"
            android:clickable="true"
            />



    </LinearLayout>

</RelativeLayout>