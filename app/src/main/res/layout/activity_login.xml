<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:backgroundTint="@color/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/log_img1"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:clickable="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/log_back"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_img1"
        android:text="SELAMAT DATANG"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/log_text1"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_text1"
        android:src="@drawable/login"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/log_img2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/log_img2"
        android:padding="30dp"
        android:id="@+id/log_ly1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Email"
            android:background="@drawable/btn_shape"
            android:paddingLeft="25dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:id="@+id/log_email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:background="@drawable/btn_shape"
            android:paddingLeft="25dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:id="@+id/log_pass"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_below="@id/log_ly1"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/primaryColor"
        android:clickable="true"
        android:id="@+id/log_text2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/log_text2"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@color/white"
        android:background="@drawable/btn_shape"
        android:width="250dp"
        android:id="@+id/log_btn1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_btn1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/log_ly2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not have an account?"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Register"
            android:fontFamily="@font/poppinsregular"
            android:clickable="true"
            android:textSize="12sp"
            android:textColor="@color/primaryColor"
            android:id="@+id/log_txtreg"
            />



    </LinearLayout>


</RelativeLayout>